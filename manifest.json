{
    "manifest_version": 3,
    "name": "Run JS on Current Domain",
    "version": "1.0",
    "description": "Runs custom JavaScript code on the current domain.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "popup.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_title": "Run Custom Code"
    }
  }
  